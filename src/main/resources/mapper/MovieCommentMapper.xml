<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dj.movie.mapper.MovieCommentMapper">

    <sql id="COMMENT">
        id,movie_id,user_id,remark,is_like,create_time
    </sql>

    <select id="findMovieCommentByUserId" resultType="com.dj.movie.pojo.MovieComment">
        select <include refid="COMMENT"/> from movie_comment where user_id = #{userId}
    </select>

    <update id="updateMovieCommentIsLike">
        update movie_comment
        <set>
            is_like = 1
        </set>
        <where>
            user_id = #{userId}
        </where>
    </update>
</mapper>
